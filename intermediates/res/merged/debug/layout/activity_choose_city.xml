<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffecedec"
    android:orientation="vertical" >

    <include layout="@layout/activity_header_new" />

    <LinearLayout
        android:id="@id/linLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@id/tvCityTitle"
            android:layout_width="fill_parent"
            android:layout_height="35.0dip"
            android:background="#ffffffff"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:text="定位城市"
            android:textColor="@color/topic_date"
            android:textSize="@dimen/sixteen_sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15.0dip"
            android:paddingLeft="10.0dip"
            android:paddingTop="15.0dip" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/locationCityName"
                    android:layout_width="81.0dip"
                    android:layout_height="36.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="@drawable/grid_view_city_bg"
                    android:gravity="center"
                    android:text="北京"
                    android:textColor="#ff484848"
                    android:textSize="@dimen/sixteen_sp" />

                <ImageView
                    android:id="@id/iv_prompt_select_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right|center"
                    android:background="@drawable/grid_view_select_city"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35.0dip"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:paddingLeft="10.0dip"
        android:text="全部城市"
        android:textColor="@color/topic_date"
        android:textSize="@dimen/sixteen_sp" />

    <GridView
        android:id="@id/gridView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@color/transparent"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:verticalSpacing="15.0dip" />

</LinearLayout>