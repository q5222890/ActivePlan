<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.accuvally.hdtui"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="5.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5.0dip" >

      <!--    <com.accuvally.hdtui.ui.CircleImageView
            android:id="@id/tvCommentLogoUrl"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:background="@drawable/tab_setting_head"
            app:border_color="@color/transparent_white"
            app:border_width="2.0dip" />-->

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left|center"
            android:orientation="vertical" >

            <TextView
                android:id="@id/tvCommentNick"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="舍我其谁"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/sixteen_sp" />

            <TextView
                android:id="@id/tvCommentContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:gravity="left|center"
                android:text="舍我其谁"
                android:textColor="@color/gary_content"
                android:textSize="@dimen/sixteen_sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@id/tvCommentTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingBottom="5.0dip"
        android:text="2014-5-30"
        android:textColor="@color/gary_content"
        android:textSize="@dimen/little_14" />

</LinearLayout>