<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/lyDetailsBottom"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="@color/txt_green"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@color/details_bottom_collection"
        android:orientation="vertical" >

        <TextView
            android:id="@id/tvDetailsColl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/selector_click_btn"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteen_sp" />
    </LinearLayout>

    <TextView
        android:id="@id/tvDetailsRegTicket"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/selector_click_btn"
        android:gravity="center"
        android:text="报名"
        android:textColor="@color/white"
        android:textSize="@dimen/sixteen_sp" />

</LinearLayout>