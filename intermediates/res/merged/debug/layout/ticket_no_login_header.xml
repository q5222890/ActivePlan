<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:visibility="visible" >

    <RelativeLayout
        android:id="@id/rlPersonTicke"
        android:layout_width="fill_parent"
        android:layout_height="90.0dip"
        android:background="@drawable/not_ticket_top_bg" >

        <com.xz.activeplan.views.CircleImageView
            android:id="@id/ivSettingHead"
            android:layout_width="55.0dip"
            android:layout_height="55.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:src="@drawable/not_lgin_head_bg"
            app:civ_border_color="@color/transparent_white"
                    app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/ivSettingHead"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:drawablePadding="10.0dip"
                android:text="@string/setting_no_login"
                android:textColor="@color/white"
                android:textSize="@dimen/sixteen_sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:singleLine="true"
                android:text="@string/setting_no_signature"
                android:textColor="@color/white"
                android:textSize="@dimen/little_14"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@id/top_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10.0dip"
        android:text="亲，还木有参加过活动，马上挑一个活动参加吧！"
        android:textColor="@color/gary_title"
        android:textSize="@dimen/little_14"
        android:visibility="gone" />

</LinearLayout>