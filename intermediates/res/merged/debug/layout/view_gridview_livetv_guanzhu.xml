<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_Relative"
    android:layout_width="match_parent"
    android:padding="@dimen/one_dp"
    android:layout_height="100dp"
    >
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/thumb"
        android:id="@+id/id_ImageGrideView_GuanZhu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout

        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/twenty_dip">
        <TextView
            android:singleLine="true"
            android:layout_weight="1"
            android:id="@+id/id_TextViewTitle"
            android:textColor="@color/white"
            android:textSize="@dimen/ten_sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/two_dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/id_ImageViewPerSon"
            android:src="@drawable/person"
            android:layout_marginRight="@dimen/five_dip"
            android:layout_width="@dimen/ten_sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/id_TextViewPersonNum"
            android:layout_toStartOf="@+id/id_TextViewPersonNum" />
        <TextView
            android:textColor="@color/white"
            android:textSize="@dimen/ten_dp"
            android:layout_marginRight="@dimen/five_dip"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/id_TextViewPersonNum" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_below="@+id/id_ImageGrideView_GuanZhu"
        android:id="@+id/id_TextViewName"
        android:textColor="@color/white"
        android:textSize="@dimen/ten_sp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/two_dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>