<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@color/white" >

            <ImageView
                android:id="@id/iv_datails_back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@drawable/selector_click_btn"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:src="@drawable/back_arrows" />

            <TextView
                android:id="@id/tvHeadTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="举报"
                android:textColor="#ff484848"
                android:textSize="18.0sp" />

            <TextView
                android:id="@id/tvSend"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_click_btn"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:text="提交"
                android:textColor="#ff62b651"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffe0e0df"
            android:gravity="left|center"
            android:padding="10.0dip"
            android:text="请选择举报类型"
            android:textColor="@color/gary_title"
            android:textSize="@dimen/little_14" />

        <RadioGroup
            android:id="@id/rgOne"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@id/rbOne1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_click_btn"
                android:button="@null"
                android:drawableRight="@drawable/selector_check_remind"
                android:padding="10.0dip"
                android:text="个人"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/sixteen_sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.100000024dip"
                android:background="@drawable/details_icon_line2" />

            <RadioButton
                android:id="@id/rbOne2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_click_btn"
                android:button="@null"
                android:drawableRight="@drawable/selector_check_remind"
                android:padding="10.0dip"
                android:text="活动群"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/sixteen_sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.100000024dip"
                android:background="@drawable/details_icon_line2" />
        </RadioGroup>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffe0e0df"
            android:gravity="left|center"
            android:padding="10.0dip"
            android:text="请选择举报原因"
            android:textColor="@color/gary_title"
            android:textSize="@dimen/little_14" />

        <RadioGroup
            android:id="@id/rgTwo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@id/rbTwo1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_click_btn"
                android:button="@null"
                android:drawableRight="@drawable/selector_check_remind"
                android:padding="10.0dip"
                android:text="色情低俗"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/sixteen_sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.100000024dip"
                android:background="@drawable/details_icon_line2" />

            <RadioButton
                android:id="@id/rbTwo2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_click_btn"
                android:button="@null"
                android:drawableRight="@drawable/selector_check_remind"
                android:padding="10.0dip"
                android:text="广告骚扰"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/sixteen_sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.100000024dip"
                android:background="@drawable/details_icon_line2" />

            <RadioButton
                android:id="@id/rbTwo3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_click_btn"
                android:button="@null"
                android:drawableRight="@drawable/selector_check_remind"
                android:padding="10.0dip"
                android:text="政治敏感"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/sixteen_sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.100000024dip"
                android:background="@drawable/details_icon_line2" />

            <RadioButton
                android:id="@id/rbTwo4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_click_btn"
                android:button="@null"
                android:drawableRight="@drawable/selector_check_remind"
                android:padding="10.0dip"
                android:text="欺骗诈钱"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/sixteen_sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.100000024dip"
                android:background="@drawable/details_icon_line2" />

            <RadioButton
                android:id="@id/rbTwo5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_click_btn"
                android:button="@null"
                android:drawableRight="@drawable/selector_check_remind"
                android:padding="10.0dip"
                android:text="违法(暴力恐怖、违禁物品)"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/sixteen_sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.100000024dip"
                android:background="@drawable/details_icon_line2" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffe0e0df"
                android:gravity="left|center"
                android:padding="10.0dip"
                android:text="请举证(选填)"
                android:textColor="@color/gary_title"
                android:textSize="@dimen/little_14" />

            <EditText
                android:id="@id/etReason"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="top"
                android:hint="举报原因"
                android:minLines="3"
                android:paddingLeft="5.0dip"
                android:textSize="@dimen/sixteen_sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>