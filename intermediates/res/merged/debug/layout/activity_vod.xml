<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <bf.cloud.BFMediaPlayerControllerVod
        android:id="@+id/media_controller_vod"
        android:layout_width="match_parent"
        android:layout_height="260dp" >
    </bf.cloud.BFMediaPlayerControllerVod>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:orientation="vertical" >
            
            <EditText 
                android:id="@+id/play_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入移动端播放代码,否则播放默认视频"
                />
            
            <EditText 
                android:id="@+id/play_token"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="如果是私有视频，请输入Token"
                />

            <Button
                android:id="@+id/change_decode_mode"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="设置解码模式" />
            
            <Button
                android:id="@+id/change_player_type"
                android:layout_width="200dp"
                android:onClick="onClick"
                android:layout_height="wrap_content"
                android:text="改变播放器类型" />

            <Button
                android:id="@+id/start"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="开始" />

            <Button
                android:id="@+id/stop"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="停止" />
            <Button
                android:id="@+id/change_video"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="切片" />

            <Button
                android:id="@+id/pause"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="暂停" />

            <Button
                android:id="@+id/resume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="继续播放" />

            <Button
                android:id="@+id/seekto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="定位播放" />

            <Button
                android:id="@+id/inc_volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="增加音量" />

            <Button
                android:id="@+id/dec_volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="降低音量" />

            <Button
                android:id="@+id/get_current_volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="获取当前音量" />

            <Button
                android:id="@+id/get_max_volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="获取最大音量" />

            <Button
                android:id="@+id/get_cur_position"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="获取当前位置" />

            <Button
                android:id="@+id/get_duration"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="获取片长" />
            <Button
                android:id="@+id/auto_screen"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="设置手机旋转屏幕跟随" />
            <Button 
                android:id="@+id/changed_ratio"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="切换宽高比"
                />
            <Button 
                android:id="@+id/video_download"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="视频下载管理"
                />
            <Button 
                android:id="@+id/download_current_video"
                android:visibility="gone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="下载当前视频"
                />
            <Button
                android:id="@+id/p2p_data_show"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="显示P2P数据细节" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>