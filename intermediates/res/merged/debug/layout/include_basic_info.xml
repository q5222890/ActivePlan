<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4.0dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:padding="10.0dip"
            android:src="@drawable/bug_ticket_first_phone_icon_bg" />

        <com.xz.activeplan.views.ClearableEditText
            android:id="@id/register_phone"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="3.0dip"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="left|center"
            android:hint="@string/register_phone"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_text_color"
            android:textSize="@dimen/sixteen_sp" />

        <TextView
            android:id="@id/acpuire_verification_code"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_margin="5.0dip"
            android:background="@drawable/selector_wane_gray2"
            android:gravity="center"
            android:padding="8.0dip"
            android:text="@string/details_dialog2_text3"
            android:textColor="@color/white"
            android:textSize="@dimen/little_14" />
    </LinearLayout>

    <View
        android:id="@id/login_first_line"
        android:layout_width="fill_parent"
        android:layout_height="0.100000024dip"
        android:layout_marginLeft="15.0dip"
        android:background="@drawable/details_icon_line2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4.0dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10.0dip"
            android:src="@drawable/bug_ticket_first_num_icon_bg" />

        <com.xz.activeplan.views.ClearableEditText
            android:id="@id/verification_code"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="10.0dip"
            android:background="@null"
            android:gravity="left|center"
            android:hint="@string/register_forget"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_text_color"
            android:textSize="@dimen/sixteen_sp" />
    </LinearLayout>

    <View
        android:id="@id/login_second_line"
        android:layout_width="fill_parent"
        android:layout_height="0.100000024dip"
        android:layout_marginLeft="15.0dip"
        android:background="@drawable/details_icon_line2" />

</LinearLayout>