<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
          <EditText
              android:id="@+id/fragment_person_etName"
              android:hint="请输入姓名(*)"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/fragment_person_etPhone"
            android:hint="请输入电话(*)"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/fragment_person_etContent"
            android:hint="介绍"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:minLines="8"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:background="@android:drawable/edit_text"
            >
        </EditText>

        <Button
            android:id="@+id/fragment_person_btSubmit"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_wane_gray2"
            android:gravity="center"
            android:padding="10.0dip"
            android:text="确定提交入驻"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="您也可以把您的资料发送至:admin@yueba.cc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="PS：记得写上您的约吧账号哦！"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>