<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_fy_homeItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/selector_click_btn"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivSelImage"
            android:layout_width="@dimen/width_20_80"
            android:layout_height="@dimen/height_7_80"
            android:layout_gravity="center"
            android:layout_marginBottom="5.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/default_home_image"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10.0dip" >

                <TextView
                    android:id="@+id/tvSelTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2.0dip"
                    android:layout_marginRight="5.0dip"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="relaxed 周末"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/little_15" />

                <LinearLayout
                    android:id="@+id/llSel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSelTitle"
                    android:orientation="horizontal"
                    android:paddingLeft="2.0dip"
                    android:paddingTop="5.0dip" >

                    <TextView
                        android:id="@+id/tvSelAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/sel_address_icon_bg"
                        android:drawablePadding="5.0dip"
                        android:ellipsize="end"
                        android:gravity="left|center"
                        android:maxLines="1"
                        android:text="地址"
                        android:textColor="@color/gary_title"
                        android:textSize="@dimen/little_11" />

                    <TextView
                        android:id="@+id/tvSelItemTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:drawableLeft="@drawable/sel_time_icon_bg"
                        android:drawablePadding="5.0dip"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="时间"
                        android:textColor="@color/gary_title"
                        android:textSize="@dimen/little_11" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/llSel"
                    android:paddingRight="10.0dip"
                    android:paddingTop="2.0dip" >

                    <TextView
                        android:id="@+id/tvState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/sel_item_status_icon_bg"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="报名中"
                        android:textColor="#ff828282"
                        android:textSize="@dimen/little_15" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10.0dip"
                        android:layout_toLeftOf="@id/tvState"
                        android:orientation="horizontal"
                        android:paddingTop="5.0dip" >

                        <TextView
                            android:id="@+id/tvSelPriceArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="bottom|left|center"
                            android:layout_weight="1.0"
                            android:gravity="bottom|left|center"
                            android:textColor="@color/darkgoldenrod"
                            android:textSize="@dimen/little_14" />

                        <TextView
                            android:id="@+id/tvSelLikeNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="bottom|left|center"
                            android:layout_marginLeft="8.0dip"
                            android:layout_toRightOf="@id/tvSelPriceArea"
                            android:layout_weight="1.0"
                            android:drawableLeft="@drawable/yanjing"
                            android:drawablePadding="2.0dip"
                            android:gravity="bottom|left|center"
                            android:text="10012"
                            android:textColor="@color/gary_title"
                            android:textSize="@dimen/little_14" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#ffecedec" />

</LinearLayout>