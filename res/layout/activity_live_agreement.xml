<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xz.activeplan.ui.live.activity.LiveAgreementActivity">

    <include android:id="@+id/agreement_header"
        layout="@layout/activity_header_new"
        ></include>

    <WebView
        android:id="@+id/agreement_webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/agreement_header"
        android:layout_weight="1">
    </WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center">

        <Button
            android:id="@+id/agreement_btAgree"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_round_edt2_black"
            android:text="已阅读并同意协议"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
