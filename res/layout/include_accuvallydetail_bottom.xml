<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44.5dip"
    android:background="@color/white">


    <ImageView
        android:id="@+id/iv_support"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/support"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_marginTop="-2dp"/>

    <View
        android:layout_width="0.5dip"
        android:layout_height="fill_parent"
        android:background="#ffecedec" />

    <ImageView
        android:id="@+id/iv_groupchart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_talking"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_marginTop="-2dp"/>

    <LinearLayout
        android:id="@id/llEnroll"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="2.0"
        android:background="#00BBFE"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvDetailsRegTicket"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/selector_click_btn"
            android:clickable="true"
            android:gravity="center"
            android:text="立即报名"
            android:textColor="#ffffffff"
            android:textSize="15.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llIsRobTicket"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="#ff80d074"
        android:clickable="true"
        android:gravity="center"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/selector_click_btn">

            <TextView
                android:id="@+id/tvCheapTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="抢特价票"
                android:textColor="#ffffffff"
                android:textSize="15.0sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tvCheapTicket"
                android:src="@drawable/rob_share"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>