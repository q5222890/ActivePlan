<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/include_recommend"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/twenty_five_dip"
        android:background="@color/header_blue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/navigation_bar"
            android:gravity="center">

            <TextView
                android:id="@id/tvMainHeaderCity"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/selector_click_btn"
                android:drawableRight="@drawable/home_down_arrow"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:text="全国"
                android:textColor="@color/white"
                android:textSize="@dimen/little_14" />

            <RelativeLayout
                android:id="@+id/rlMainHeaderSearch"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="7"
                android:background="@drawable/shape_round_edt"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etMainSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/search_city_bg"
                    android:drawablePadding="10dp"
                    android:focusable="false"
                    android:hint="搜索约吧"
                    android:imeOptions="actionSearch"
                    android:paddingBottom="@dimen/two_dp"
                    android:paddingLeft="@dimen/five_dip"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:textColor="#fdfdfd"
                    android:textSize="@dimen/twelve_dp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/ivMainHeaderAdd"
                android:layout_width="43dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_click_btn"
                android:gravity="center"
                android:paddingLeft="5.0dip"
                android:paddingRight="10.0dip"
                android:src="@drawable/menu"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

    <com.xz.activeplan.views.xlistview.XListView
        android:id="@+id/id_XListview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/shape_mine"
        android:fadingEdge="none"
        android:listSelector="@color/transparent"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none"
        android:scrollingCache="false"
        android:dividerHeight="0.1dp"
        />
</LinearLayout>