<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/fifty_dip"
            android:layout_height="@dimen/fifty_dip"
            android:layout_marginLeft="@dimen/ten_dp"
            android:src="@drawable/default_head" />
        <TextView
            android:id="@+id/no_reading"
            android:layout_width="@dimen/twenty_dip"
            android:layout_height="@dimen/twenty_dip"
           android:layout_marginLeft="@dimen/fifty_dip"
            android:background="@drawable/rc_voide_message_unread"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/id_TextViewConversationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/image"
            android:text="Name"
            android:textSize="18sp" />

        <TextView
            android:text="context"
            android:id="@+id/id_TextViewConversationContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_TextViewConversationName"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:layout_marginTop="@dimen/five_dip"
            android:layout_toRightOf="@+id/image"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <TextView
            android:text="time"
            android:id="@+id/id_TextViewConversationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/five_dip"
            android:layout_marginTop="@dimen/five_dip"
            android:textColor="@color/textColor" />
    </RelativeLayout>

</LinearLayout>