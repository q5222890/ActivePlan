<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/line_selectorcategory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_selector_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/string_piaoquan"
                android:textSize="20sp"
                android:gravity="center"
                />
            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_selector_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/string_shoucang"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_tab_line"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:contentDescription="tab"
            android:background="@drawable/tab_selected_pressed_holo" >
        </ImageView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/gray"/>
    </LinearLayout>


</LinearLayout>