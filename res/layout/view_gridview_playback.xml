<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_click_btn4"
    android:orientation="vertical"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">

    <RelativeLayout
        android:id="@+id/id_Rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/id_ImageGrideNew"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/thumb" />

        <TextView
            android:id="@+id/tv_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/shape_redpink"
            android:paddingBottom="1dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:text="@string/playstatus"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/id_Line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/twenty_dip"
            android:layout_alignParentBottom="true"
            android:background="#747474"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_TextTime"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/little_10"
                android:gravity="center_vertical"
                android:text="1362131"
                android:textColor="@color/white"
                android:textSize="@dimen/twelve_sp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/id_TextViewTiele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_Rel"
        android:layout_marginTop="@dimen/two_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/id_TextViewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_TextViewTiele"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="aa"
        android:textSize="@dimen/ten_sp"
        android:visibility="gone"/>
</RelativeLayout>