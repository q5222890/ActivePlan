<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/ten_dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
 >
    <TextView
        android:id="@+id/id_TextViewStata"
        android:text="付款倒计时:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RushBuyCountDownTimerViewStyle"
        />
    <TextView
        style="@style/RushBuyCountDownTimerViewStyle"
        android:id="@+id/id_TextViewDaty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginLeft="@dimen/five_dip"
        style="@style/RushBuyCountDownTimerViewStyle"
        android:id="@+id/tv_hour_decade"
        />

    <TextView
        android:id="@+id/tv_hour_unit"
        android:text="0"
        style="@style/RushBuyCountDownTimerViewStyle"
        android:layout_marginLeft="2dp" />

    <TextView
        android:text=":"
        style="@style/RushBuyCountDownTimerViewStyle" />

    <TextView
        android:id="@+id/tv_min_decade"
        style="@style/RushBuyCountDownTimerViewStyle" />

    <TextView
        android:id="@+id/tv_min_unit"
        style="@style/RushBuyCountDownTimerViewStyle"
        android:layout_marginLeft="1dp" />

    <TextView
        android:text=":"
        style="@style/RushBuyCountDownTimerViewStyle" />

    <TextView
        android:id="@+id/tv_sec_decade"
        style="@style/RushBuyCountDownTimerViewStyle" />

    <TextView
        android:id="@+id/tv_sec_unit"
        style="@style/RushBuyCountDownTimerViewStyle"
        android:layout_marginLeft="1dp" />
    <TextView
        android:visibility="gone"
        android:id="@+id/id_TextViewBrackets"
        style="@style/RushBuyCountDownTimerViewStyle"
        android:layout_marginLeft="1dp" />

</LinearLayout>