<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingTop="@dimen/ten_dp"
    android:paddingBottom="@dimen/ten_dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.xz.activeplan.ui.personal.text.CircleImageView
        android:layout_centerVertical="true"
        android:id="@+id/id_ImageHead"
        android:src="@drawable/rc_default_portrait"
        android:layout_width="@dimen/fifty_dip"
        android:layout_height="@dimen/fifty_dip" />
    <LinearLayout
        android:layout_toRightOf="@+id/id_ImageHead"
        android:layout_marginLeft="@dimen/five_dip"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/id_TextViewName"
            android:textSize="@dimen/fifteen_sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:text="姓名:"
            android:textColor="@color/textColor_Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_TextViewTicketNum"
            android:layout_marginTop="@dimen/ten_dp"
            android:textSize="@dimen/fifteen_sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:text="票号:"
            android:textColor="@color/textColor_Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/id_TextViewWhetherToCheck"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/five_dip"
        android:textSize="@dimen/fifteen_sp"
        android:singleLine="true"
        android:ellipsize="none"
        android:text="未检票"
        android:textColor="@color/textColor_Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>