<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xz.activeplan.ui.live.activity.CanSeeActivity">

    <include
        android:id="@+id/headlayout"
        layout="@layout/activity_header_new" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/see_ll_gongkai"
           android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/see_iv_check1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:src="@drawable/delete_ticket_yes"
                android:visibility="invisible" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公开" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所有人都可以观看"
                    android:textColor="@color/gary4" />
            </LinearLayout>
        </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="0.05dp"
           android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/see_ll_fufei"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/see_iv_check2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:src="@drawable/delete_ticket_yes"
                android:visibility="invisible" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付费" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="先付费才可以观看"
                    android:textColor="@color/gary4" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/see_iv_arrow1"
                    android:layout_width="18dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/downtop_check"  />
            </LinearLayout>
        </LinearLayout>
        <!--付费的Item-->
        <LinearLayout
            android:id="@+id/see_ll_fufei_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:src="@drawable/gary_bg_btn"
                android:visibility="invisible" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/see_etMoney"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_shape_bg"
                    android:hint="500.00"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元  请收费1-500元"
                    android:textColor="@color/gary4" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/see_ll_mima"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/see_iv_check3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:src="@drawable/delete_ticket_yes"
                android:visibility="invisible" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需先输入密码才可以观看"
                    android:textColor="@color/gary4" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/see_iv_arrow2"
                    android:layout_width="18dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/downtop_check" />
            </LinearLayout>
        </LinearLayout>
        <!--密码的Item-->
        <LinearLayout
            android:id="@+id/see_ll_mima_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:src="@drawable/gary_bg_btn"
                android:visibility="invisible" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="2dp">
                <EditText
                    android:id="@+id/see_etPass"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_shape_bg"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="请设置6位数字密码"
                    android:textColor="@color/gary4" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:background="@color/gray"/>
    </LinearLayout>

</LinearLayout>
