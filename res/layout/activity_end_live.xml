<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C4245"
    android:orientation="vertical"
    tools:context="com.xz.activeplan.ui.live.activity.EndLiveActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:text="直播结束"
        android:textColor="@color/header_blue"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/endLive_tvNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#F59D12"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 人观看"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本次直播收获"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/endLive_tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 0.00 "
            android:textColor="#F59D12"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打赏"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:text="分享到"
        android:textColor="#CCCCCC"
         />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="25dp"
       android:gravity="center"
       android:orientation="horizontal"
       android:paddingLeft="50dp"
       android:paddingRight="50dp">

       <ImageView
           android:id="@+id/endLive_ivWenxin"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:src="@drawable/share_wx_icon_bg_normal" />
       <ImageView
           android:id="@+id/endLive_ivFriend"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:layout_marginLeft="50dp"
           android:src="@drawable/share_wxpy_icon_bg_selected" />
       <ImageView
           android:id="@+id/endLive_ivQQ"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:layout_marginLeft="50dp"
           android:src="@drawable/login_qq_icon_bg" />
       <ImageView
           android:id="@+id/endLive_ivSina"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:layout_marginLeft="50dp"
           android:src="@drawable/share_sina_icon_bg_selected" />
   </LinearLayout>


    <Button
        android:id="@+id/endLive_btBack"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_round_edt2"
        android:gravity="center"
        android:text="返回首页"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="视频在云端转码中"
            android:textColor="#CCCCCC" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="需大约30分钟后可查看回放"
            android:textColor="#CCCCCC" />

    </LinearLayout>
</LinearLayout>
