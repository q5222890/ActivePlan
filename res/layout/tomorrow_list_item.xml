<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/five_dip">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_TextViewNum"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="@dimen/twelve_dp"
                android:typeface="serif" />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="@dimen/eighty_sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.xz.activeplan.views.CircleImageView
            android:id="@+id/id_ImageHeadPhoto"
            android:layout_width="@dimen/fifty_dip"
            android:layout_height="@dimen/fifty_dip"
            android:scaleType="centerCrop"
            android:src="@drawable/default_userimg"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/two_dp" />
         <TextView
             android:id="@+id/id_TextViewFlans"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="@dimen/five_dip"
             android:text="粉丝: 100"
             android:textColor="@color/red2" />
        <Button
            android:id="@+id/idButtonGuanZhu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/twenty_five_dip"
            android:layout_marginTop="@dimen/five_dip"
            android:background="@drawable/guanzhubut_shpe"
            android:text="关注"
            android:textSize="@dimen/twelve_dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/five_dip"
        android:orientation="vertical">
        <TextView
            android:id="@+id/id_TextViewTommorrowTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/little_14" />
        <LinearLayout
            android:id="@+id/tomorrow_item_llVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_dp"
            android:background="@drawable/selector_click_btn3"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/id_ImageViewActivity"
                android:layout_width="@dimen/hundred_dip"
                android:layout_height="@dimen/eighty_dip"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/fieldactivity_a" />
             <TextView
                 android:id="@+id/id_TextViewTommorrowContent"
                 android:layout_width="match_parent"
                 android:layout_height="80dp"
                 android:padding="5dp"
                 android:textColor="@color/home_bottom_color_normal"
                 android:textSize="@dimen/fifteen_sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_TextAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_dp"
            android:text="预约"
            android:textColor="@color/home_bottom_color_normal"
            android:textSize="@dimen/twelve_dp" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>