<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/material_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_dialog_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@id/contentView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@id/id_TextViewConversationName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15.0dip"
                android:text="亲~"
                android:textColor="#ffffd576"
                android:textSize="@dimen/little_18" />

            <LinearLayout
                android:id="@id/message_content_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="14.0dip"
                android:paddingLeft="24.0dip"
                android:paddingRight="23.0dip" >

                <TextView
                    android:id="@id/message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="这样一来,以后收藏里再也看不到它了哟"
                    android:textColor="@color/gary_title"
                    android:textSize="@dimen/sixteen_sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/buttonLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/selector_dialogbg_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/tvDialogMistake"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/selector_click_btn"
                    android:gravity="center"
                    android:padding="15.0dip"
                    android:text="我按错了"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="#ff61b754" />

                <TextView
                    android:id="@id/tvDialogRemove"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/selector_click_btn"
                    android:gravity="center"
                    android:padding="15.0dip"
                    android:text="移掉它吧"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>