<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- bottom shadow -->
    <item>
        <shape android:shape="rectangle" >
            <!-- from top to bottom -->
            <gradient
                android:angle="90"
                android:centerColor="@color/home_bottom_color_selected"
                android:endColor="@color/white"
                android:startColor="@color/brackground" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- content -->
    <item android:bottom="@dimen/five_dip">
        <shape android:shape="rectangle" ><!--矩形-->
            <solid android:color="@color/header_blue" /><!--固体-->
            <corners android:radius="20dp" /><!--角,半径-->
        </shape>
    </item>
</layer-list>